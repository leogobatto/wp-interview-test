{
	"name": "Debian",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "bullseye" }
	},
	"settings": {},
	"extensions": [],
	"remoteUser": "vscode",
	"features": {
		"docker-in-docker": "latest",
    	"lando/lando-dev-container-feature/landodevcontainer": "latest",
	},
    "mounts": [
        "source=${localWorkspaceFolder}/.devcontainer/config.yml,target=~/.lando/config.yml,type=bind"
    ],
	"postCreateCommand": "mkdir -p ~/.lando/cache && lando start"
}
