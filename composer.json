{
  "name": "testing/wordpress",
  "type": "project",
  "description": "Generated with wp-devops",
  "authors": [
    {
      "name": "Leonardo Gobatto",
      "email": "lgobatto@gmail.com"
    }
  ],
  "repositories": {
    "wpackagist": {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  },
  "license": "MIT",
  "require": {
    "php": ">=8.3",
    "roots/wordpress": "6.8.1",
    "inpsyde/wp-translation-downloader": "^2.5",
    "vlucas/phpdotenv": "^5.5"
  },
  "config": {
    "allow-plugins": {
      "roots/wordpress-core-installer": true,
      "inpsyde/wp-translation-downloader": true,
      "composer/installers": true
    }
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "content/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ]
    },
    "wp-translation-downloader": {
      "languages": [
        "pt_BR",
        "en_US",
        "es_ES"
      ],
      "languageRootDir": "content/languages",
      "virtual-packages": [
        {
          "name": "wordpress/wordpress",
          "type": "wordpress-core",
          "version": "6.8.1"
        }
      ]
    }
  },
  "require-dev": {
    "laravel/pint": "^1.23",
    "phpunit/phpunit": "^9.5"
  }
}